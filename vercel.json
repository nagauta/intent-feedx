{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "turbo build --filter=@intent-feedx/web",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "installCommand": "bun install",
  "crons": [
    {
      "path": "/api/cron/daily-search",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/screenshot",
      "schedule": "0 * * * *"
    }
  ]
}
