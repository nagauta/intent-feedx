{
  "name": "intent-feedx",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && lefthook install || true",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "start": "turbo start",
    "clean": "turbo clean",
    "search": "bun run scripts/search.ts",
    "db:push": "bun run --cwd apps/web db:push",
    "db:seed": "bun run --cwd apps/web db:seed",
    "db:studio": "bun run --cwd apps/web db:studio"
  },
  "devDependencies": {
    "lefthook": "^2.0.15",
    "turbo": "^2"
  },
  "packageManager": "bun@1.2.1"
}
